{
  "extends": "eslint:recommended",  
  "parser": "babel-eslint",  
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "eqeqeq": "warn",    
    "no-console": "off",    
    "indent": ["error", 2, { "SwitchCase": 1 }]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "mongo": true
  }
}